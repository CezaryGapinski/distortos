config CHIP_STM32L0
	bool "STM32L0"
	select ARCHITECTURE_ARMV6_M
	select ARCHITECTURE_ARM_CORTEX_M0PLUS
	select ARCHITECTURE_ARM_CORTEX_M0PLUS_R0P1
	select CHIP_STM32_GPIOV2
	select CHIP_STM32_GPIOV2_HAS_GPIOA
	select CHIP_STM32_GPIOV2_HAS_GPIOB
	select CHIP_STM32_GPIOV2_HAS_GPIOC
	select CHIP_STM32_SPIV1
	select CHIP_STM32_SPIV1_HAS_SPI1
	select CHIP_STM32_USARTV2
	select CHIP_STM32_USARTV2_USART4_USART5_COMBINED_INTERRUPT if CHIP_STM32L07 || CHIP_STM32L08
	select CHIP_STM32_USARTV2_HAS_CR1_M1_BIT
	select CHIP_STM32_USARTV2_HAS_USART2
	select CHIP_STM32_USARTV2_HAS_DMA
	select CHIP_STM32_DMAV1
	select CHIP_STM32_DMAV1_HAS_CSELR
	select CHIP_STM32_DMAV1_DMA1_CHANNEL2_CHANNEL3_COMBINED_INTERRUPT
	select CHIP_STM32_DMAV1_DMA1_CHANNEL4_CHANNEL5_CHANNEL6_CHANNEL7_COMBINED_INTERRUPT
	select CHIP_STM32_DMAV1_HAS_DMA1
	select CHIP_STM32_DMAV1_HAS_DMA1_CHANNEL1
	select CHIP_STM32_DMAV1_HAS_DMA1_CHANNEL2
	select CHIP_STM32_DMAV1_HAS_DMA1_CHANNEL3
	select CHIP_STM32_DMAV1_HAS_DMA1_CHANNEL4
	select CHIP_STM32_DMAV1_HAS_DMA1_CHANNEL5
	help
		STM32L0 chip family
