if CHIP_STM32_LTDCV1

config CHIP_STM32_LTDCV1_ENABLE
	bool "LTDC low-level driver"
	default n
	depends on CHIP_STM32_LTDCV1_HAS_LTDC
	help
		Enable LTDC low-level driver

config CHIP_STM32_LTDCV1_HAS_LTDC
	bool
	default n

endif	# CHIP_STM32_LTDCV1
